{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": ["node", "jest", "@playwright/test"]
    },
    "include": [
        "**/*.ts",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
} 